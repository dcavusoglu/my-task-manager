<h1>Yeni iş ekle</h1>
<%= simple_form_for @task do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
  <%= f.input :name, label: 'Görev adı:' %>
  <%= f.input :content, label: 'Açıklama:' %>
  <%= f.input :deadline, as: :date, html5: true, label: 'Son tarih:' %>
  <%= f.button :submit, value: 'Kaydet' %>
<% end %>
